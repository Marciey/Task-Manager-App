@model TaskManager.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<main role="main">
    <section class="row justify-content-center" aria-label="Register Form">
        <div class="col-md-4">
            <header>
                <h2>@ViewData["Title"]</h2>
            </header>
            <form asp-action="Register" method="post" autocomplete="on">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" required minlength="8" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <footer class="form-group">
                    <button type="submit" class="btn btn-primary">Register</button>
                </footer>
            </form>
            <div class="mt-3">
                <p>Already have an account? <a asp-action="Login">Login here</a></p>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 